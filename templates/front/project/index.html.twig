{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}

<div class="main">


    <h1 class="project title_page">Projet</h1>

    <div class="project container">
        <div class="project project_name">
        <h2 class="project_name">{{ project.name }}</h2>
        </div>
        
        <div class="project section">

             <div class="project_summary text">
                <p class="summary_text">{{ project.description }}</p>
            </div>

            <div class="project_image">
            <img class="project_image_img" src="{{  asset('assets/images/' ~ project.image)  }}" alt="">
            </div>

            

            <div class="project_description text">
                <p class="description_text">{{ project.summary }}</p>
            </div>
        </div>

        <div class="project_links">
            <div>
                <a href="{{ project.url }}" target="_blank" class="project_links-items">Lien du site
                <i class="fa-solid fa-arrow-up-right-from-square"></i>
                </a>
            </div>
            <div>
                <a href="{{ project.github }}" target="_blank" class="project_links-items"> Lien GitHub
                <i class="fa-brands fa-github"></i>
                </a>
            </div>
        </div>

        <div>
        <a href="{{ path('home') }}" class="project_links-items back_home">Retour Ã  l'accueil</a>
        </div>
    
    </div>

</div>

{% endblock %}
